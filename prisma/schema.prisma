generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id    String  @id @unique
  name  String?
  email String  @unique
}

model Movie {
  id          String   @id @default(uuid())
  title       String
  description String
  releaseDate Int
  director    String?
  image       String
  genre       String[]
  rating      Float?
  duration    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  thriller    String
}

model Series {
  id          String   @id @default(uuid())
  title       String
  description String
  releaseDate Int
  seasons     Int
  episodes    Int
  rating      Float
  genre       String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FanFiction {
  id          String   @id @default(uuid())
  title       String
  description String
  author      String
  fandom      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
